@model MktAcademy.ViewModels.UserView
@{
    ViewBag.Title = "Roles";
}

<h2>Permissions for user: @Model.UserName</h2>

<p>
    @Html.ActionLink("Add Permission", "AddRole", new { user = Model }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return", "Index", new { }, new { @class = "btn btn-info" })
</p>

<table class="table">
    
    @for(int i = 0; i< Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Roles[i].RoleName)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new {user = Model, Model.Roles[i].RoleID })
                    </td>
                </tr>
            }

</table>